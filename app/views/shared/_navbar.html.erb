<div class="navbar shadow navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex justify-content-between align-items-center w-100 px-3">
    <div>
      <%= link_to "/", class: "navbar-brand d-flex align-items-center" do %>
        <%= image_tag "barquito.png", class: "me-3" %>
        <h3 class="mt-3 d-none d-md-block">KOOLBOATS</h3>
      <% end %>
    </div>


<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: root_path, method: :get, class: "d-flex form-inline" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control mr-sm-2 rounded",
            style: "width: 300px;",
            placeholder: "Where? find your boat..."
        %>
        <div>
        <button type="submit" class="btn border-0" title="Search">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>
</div>

    <ul class="navbar-nav">
      <li class="nav-item d-none d-md-block">
        <%= link_to "Own a boat? Make $$$", "/boats/new", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown position-relative">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-end position-absolute" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "My rentals", "/rentals", class: "dropdown-item" %>
            <%= link_to "My boats", "/myboats", class: "dropdown-item" %>
            <%= link_to "Log out", "/users/sign_out", class: "dropdown-item", data: {turbo_method: :delete} %>
          <% else %>
            <%= link_to "Log in", "/users/sign_in", class: "dropdown-item" %>
            <%= link_to "Sign up", "/users/sign_up", class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
