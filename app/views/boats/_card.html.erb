<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
    <% boats.each do |boat| %>
      <div class="col">
        <div class="boat">
          <div class="card rounded-4 shadow" style="width: 100%;">
              <div id="carousel<%= boat.id %>" class="carousel slide" data-bs-ride="carousel" style="height: 200px; overflow: hidden;">
                <div class="carousel-inner rounded-top-4">
                  <% boat.photos.each_with_index do |photo, index| %>
                    <div class="carousel-item <%= 'active' if index == 0 %>">
                      <%= cl_image_tag photo.key, class: "d-block w-100 img-fluid", style: "height: 200px; width: 100%;" %>
                    </div>
                  <% end %>
                </div>
                <a class="carousel-control-prev" href="#carousel<%= boat.id %>" role="button" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel<%= boat.id %>" role="button" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </a>
              </div>
            <div class="card-body">
              <h5 class="card-title"><%= boat.name %></h5>
              <h3><%= number_to_currency(boat.price) %></h3>
              <p class="card-text" style="height: 80px;"><%= boat.description %>.</p>
              <%= link_to "Rent this boat", boat_path(boat), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
